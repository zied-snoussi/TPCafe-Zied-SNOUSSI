# Environment Variables Example
# Copy this file to .env and update with your values
# DO NOT commit .env file to version control

# MySQL Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=tpcafe
MYSQL_USER=tpcafe_user
MYSQL_PASSWORD=your_secure_password

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=docker
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/tpcafe?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=tpcafe_user
SPRING_DATASOURCE_PASSWORD=your_secure_password

# Docker Hub (for CI/CD)
DOCKER_USERNAME=your_dockerhub_username
DOCKER_PASSWORD=your_dockerhub_password_or_token

# Server Configuration (for deployment)
SERVER_HOST=your.server.com
SERVER_USER=deploy
SSH_PRIVATE_KEY=your_ssh_private_key

# SonarCloud (optional)
SONAR_TOKEN=your_sonar_token
SONAR_PROJECT_KEY=your_project_key
